{
    "name": "astro-create-portal",
    "version": "1.0.1",
    "type": "module",
    "description": "Astro integration providing head-safe and keyed portal components for SSR and static builds.",
    "author": {
        "name": "Bl4cky99",
        "email": "info@bl4cky.de",
        "url": "https://github.com/Bl4cky99"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Bl4cky99/astro-create-portal.git"
    },
    "homepage": "https://github.com/Bl4cky99/astro-create-portal#readme",
    "bugs": {
        "url": "https://github.com/Bl4cky99/astro-create-portal/issues/new?template=bug_report.yml"
    },
    "keywords": [
        "astro",
        "portal",
        "head",
        "metadata",
        "ssr",
        "static-site",
        "integration"
    ],
    "license": "MIT",
    "files": ["dist", "src/components", "README.md", "README_ASSETS"],
