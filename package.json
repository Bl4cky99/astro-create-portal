        "./HeadPortal.astro": "./src/components/HeadPortal.astro",
        "./CreatePortal.astro": "./src/components/CreatePortal.astro",
        "./Portal.astro": "./src/components/Portal.astro"
    },
    "peerDependencies": {
        "astro": "^5"
    },
    "devDependencies": {
        "@types/jsdom": "^21.1.7",
        "jsdom": "^25.0.0",
